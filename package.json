{
  "name": "rehype-zod",
  "version": "0.1.0",
  "description": "Type-only helper to map Zod schemas to react-markdown components (rehype-focused).",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "keywords": [
    "rehype",
    "react-markdown",
    "zod",
    "types"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-markdown": "^10.0.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "zod": "^4.1.0"
  },
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:types",
    "build:js": "tsup src/index.ts --format esm,cjs --clean",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT"
}
